<Page
    x:Class="FirstUWPApp.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:FirstUWPApp.Views.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <local:HomeVM/>
    </Page.DataContext>

    <Grid Background="#ff8000">
        <TextBlock FontSize="24" Text="{ Binding MainText, UpdateSourceTrigger=PropertyChanged }" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
