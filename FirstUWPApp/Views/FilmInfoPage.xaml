<Page
    x:Class="FirstUWPApp.Views.FilmInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding FilmInfoViewModel, Source={StaticResource ViewModelLocator}}">

    <Page.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>

        <Style x:Key="FilmTextInfo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <!--TODO: Fix width -->
            <Setter Property="Width" Value="720"/>
            <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <RelativePanel Grid.Row="0">
            <Button x:Name="BackBtn" 
                    Content="Back"
                    Style="{StaticResource BasicButton}"
                    Click="BackBtn_Click"/>
        </RelativePanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Image Style="{StaticResource ImagePos}" Source="{Binding FilmInfo.Poster}"/>

            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource FilmTextInfo}" Text="{Binding FilmInfo.Title}"/>
                <TextBlock Style="{StaticResource FilmTextInfo}" Text="{Binding FilmInfo.Runtime}"/>
                <TextBlock Style="{StaticResource FilmTextInfo}" Text="{Binding FilmInfo.Genre}"/>
                <TextBlock Style="{StaticResource FilmTextInfo}" Text="{Binding FilmInfo.Type}"/>
                <!--TODO: Fix overflow text on page-->
                <TextBlock Style="{StaticResource FilmTextInfo}" Text="{Binding FilmInfo.Plot}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>

