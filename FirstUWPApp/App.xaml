<Application
    x:Class="FirstUWPApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Style.xaml"/>
                <ResourceDictionary Source="Resources/LocatorDictionary.xaml"/>
                <ResourceDictionary Source="Resources/TitleResources.xaml"/>
                <ResourceDictionary Source="Resources/ConstantDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>   
        </ResourceDictionary>
    </Application.Resources>

</Application>
    
    
