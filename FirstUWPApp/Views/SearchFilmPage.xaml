<Page
    x:Class="FirstUWPApp.SearchFilmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="using:System"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding SearchFilmViewModel, Source={StaticResource ViewModelLocator} }">
  
    <Grid Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="95"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0">
            <Button x:Name="SearchBtn"                    
                    Content="Search" 
                    Style="{StaticResource BasicButton}"
                    Command="{Binding Test}"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"/>
            
            <TextBox FontSize="30"
                     x:Uid="PlaceHolderForSearchBox"
                    Margin="10"
                    Text="{Binding RequiredFilm, Mode=TwoWay}"                     
                    RelativePanel.LeftOf="SearchBtn"
                    RelativePanel.AlignLeftWithPanel="True"/>
        </RelativePanel>
        
        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="50"
                Click="Button_Click"
                Background="Black">
            <Button.Content>
                <Image Style="{StaticResource ImagePos}" Source="{Binding Poster, UpdateSourceTrigger=PropertyChanged}"/>
            </Button.Content>
        </Button>
    </Grid>
</Page>
