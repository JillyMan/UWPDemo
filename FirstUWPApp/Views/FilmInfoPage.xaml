                    </TextBlock>
                    <Button Content="Accept" Style="{StaticResource AccentButtonStyle}" Click="Button_Click"/>

                    <Button x:Name="LeftUpBtn" Style="{StaticResource ChevronRightCenterPosBtnStyle}"/>
                    <Button x:Name="RightBottomBtn" Style="{StaticResource ChevronLeftCenterPosBtnStyle}"/>
                
                </StackPanel>
            </RelativePanel>
        </ScrollViewer>

    </Grid>
</Page>
