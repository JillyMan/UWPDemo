<Page
    x:Class="FirstUWPApp.SearchFilmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding SearchFilmViewModel, Source={StaticResource ViewModelLocator}}">

    <Grid Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="95"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox Grid.Row="0" Width="920" FontSize="30" Margin="10"  Text="{Binding RequiredFilm, Mode=TwoWay}" PlaceholderText="Input film name"/>
            <Button Content="Search" 
                    Style="{StaticResource BasicButton}"
                    Command="{Binding Test}"/>
        </StackPanel>
        
        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="50">
            <Button.Content>
                <Image Style="{StaticResource ImagePos}" Source="{Binding Poster, UpdateSourceTrigger=PropertyChanged}"/>
            </Button.Content>
        </Button>
    </Grid>
</Page>
